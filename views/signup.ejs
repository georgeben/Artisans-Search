<% include partials/header %>
    <header>
        <nav>
            <h1>Artisan Search</h1>
        </nav>
    </header>

    <form class="signup-form" method="post">
        <h4>Create an account</h4>
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" aria-describedby="namelHelp"
            placeholder="Enter your name" name="name" required>
        </div>
        <div class="form-group">
            <label for="username">Username</label>
            <input type="email" class="form-control" id="username" placeholder="Enter your username"
            name="username" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" placeholder="Choose a password"
            name="password" required>
        </div>
        <button type="submit" class="btn">Create an account</button>
        <p>Already havev an account? Sign in <a href="/login">here.</a></p>
    </form>

<% include partials/footer %>